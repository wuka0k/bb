<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1F1F1"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:layout_marginBottom="3dp"
            tools:context=".MainActivity">

            <ImageView
                android:id="@+id/iv11"
                android:layout_width="160dp"
                android:layout_height="134dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:background="@mipmap/hao" />

            <TextView
                android:id="@+id/tv_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/iv11"
                android:text="aaaa"
                android:textColor="#5E5555"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_content1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name1"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/iv11"
                android:text="aaaaaaaaaaaaa"
                android:textColor="#5E5555"
                android:textSize="25sp" />


            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:format24Hour="MM月dd日 a HH:mm:ss"
                android:textColor="#5E5555"
                android:textSize="15sp" />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="317dp"
            android:src="@mipmap/hao2" />
<!--        二维码-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:textSize="25sp"
            android:text="我的书包"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:text="我的订单"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/bt_tuichu"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_login1"
        android:textSize="30sp"
        android:text="退出登录"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>